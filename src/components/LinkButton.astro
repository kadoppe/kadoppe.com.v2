---
export interface Props {
	href: string;
	className?: string;
	ariaLabel?: string;
	title?: string;
	disabled?: boolean;
	targetBlank?: boolean;
	rel?: string;
}

const {
	href,
	className,
	ariaLabel,
	title,
	rel,
	disabled = false,
	targetBlank = false,
} = Astro.props;
---

<a
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  class={`group inline-block ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  target={targetBlank ? "_blank" : "_self"}
  rel={rel}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
